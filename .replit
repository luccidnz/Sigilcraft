entrypoint = "unified_server.py"
modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "python unified_server.py"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Sigilcraft Production"

[[workflows.workflow]]
name = "Sigilcraft Production"
author = 45492115
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python unified_server.py"

[[workflows.workflow]]
name = "Test & Validate"
author = 45492115
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üß™ Running comprehensive test suite...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m pytest tests/test_smoke.py -v"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üîç Running integration tests...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_tests.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"‚úÖ All tests completed!\""

[[workflows.workflow]]
name = "Backend Only"
author = 45492115
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"üîÆ Starting Python Backend Only...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[ports]]
localPort = 5000
externalPort = 80
